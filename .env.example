# SaferTrade Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Redis Connection
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# REQUIRED: Blockchain RPC Endpoints
# Get free endpoints from: Alchemy, Infura, QuickNode, or public RPCs
# =============================================================================

# Ethereum Mainnet (Chain ID: 1)
RPC_ETHEREUM=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Base (Chain ID: 8453)
RPC_BASE=https://mainnet.base.org

# Polygon (Chain ID: 137)
RPC_POLYGON=https://polygon-rpc.com

# Optimism (Chain ID: 10)
RPC_OPTIMISM=https://mainnet.optimism.io

# Arbitrum (Chain ID: 42161)
RPC_ARBITRUM=https://arb1.arbitrum.io/rpc

# Blast (Chain ID: 81457)
RPC_BLAST=https://rpc.blast.io

# Solana
RPC_SOLANA=https://api.mainnet-beta.solana.com

# =============================================================================
# OPTIONAL: API Keys for Enhanced Data
# =============================================================================

# Etherscan API (for contract verification)
ETHERSCAN_API_KEY=

# CoinGecko API (for price data)
COINGECKO_API_KEY=

# =============================================================================
# OPTIONAL: Alert Delivery
# =============================================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhook
DISCORD_WEBHOOK_URL=

# =============================================================================
# OPTIONAL: Logging and Debug
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (verbose output)
DEBUG=false
