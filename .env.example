# SaferTrade Environment Configuration
# Copy to .env and fill in your values

# === DATABASE ===
DATABASE_URL=sqlite:///data/databases/safertrade.db
REDIS_URL=redis://localhost:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_password

# === API (if running full version) ===
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=generate_a_secure_random_key

# === BLOCKCHAIN RPC ===
# Get free keys at: https://alchemy.com or https://infura.io
ALCHEMY_API_KEY=your_alchemy_key
INFURA_API_KEY=your_infura_key
ETHERSCAN_API_KEY=your_etherscan_key

# === OPTIONAL: L2 Chains ===
ARBISCAN_API_KEY=
OPTIMISM_API_KEY=
POLYGONSCAN_API_KEY=
BASESCAN_API_KEY=

# === OPTIONAL: Price Data ===
COINGECKO_API_KEY=
